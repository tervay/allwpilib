{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"]
  },
  "include": [
    "*.ts",
    "../typescript/*.ts",
    "../typescript/*.d.ts",
    "../../wpilibc/wasm/typescript/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

